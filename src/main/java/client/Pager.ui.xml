<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .container {
            border: 1px solid #bbbbbb;
            padding: 5px;
            display: inline-block;
            margin: 15px;
            border-radius: 5px;
        }

        .button {
            background: transparent;
            border: 0px;
        }

        .button:hover {
            background: #e0e0e0;
        }

        .label {
            text-align: center;
            margin-left: 5px;
            margin-right: 5px;
        }
    </ui:style>
    <g:HTMLPanel>
        <g:HorizontalPanel styleName="{style.container}" horizontalAlignment="ALIGN_CENTER">
            <g:Button ui:field="previousPageButton" styleName="{style.button}" text="←"/>
            <g:Label ui:field="currentPageLabel" styleName="{style.label}"/>
            <g:Button ui:field="nextPageButton" styleName="{style.button}" text="→"/>
        </g:HorizontalPanel>
    </g:HTMLPanel>
</ui:UiBinder>